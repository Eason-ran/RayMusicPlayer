<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.raymondqk.raymusicplayer"
          android:installLocation="preferExternal">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MusicListActivity"
            android:label="@string/musicplayer"
            >
            <!--<intent-filter>-->
            <!--<action android:name="android.intent.action.MAIN"></action>-->
            <!--<category android:name="android.intent.category.LAUNCHER"></category>-->
            <!--</intent-filter>-->
        </activity>
        <activity android:name=".activity.MainActivity">
            <!--<intent-filter>-->
            <!--<action android:name="android.intent.action.MAIN"></action>-->
            <!--<category android:name="android.intent.category.LAUNCHER"></category>-->
            <!--</intent-filter>-->
        </activity>
        <activity android:name=".activity.LaunchActivity">
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN"></action>-->
                <!--<category android:name="android.intent.category.LAUNCHER"></category>-->
            <!--</intent-filter>-->
        </activity>
        <activity android:name=".activity.TestFileActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"></action>
                <category android:name="android.intent.category.LAUNCHER"></category>
            </intent-filter>
        </activity>
        <activity android:name=".activity.GuideActivity"></activity>

        <service android:name=".service.MusicService"></service>

        <receiver android:name=".widget.MusicWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <intent-filter>
                <action android:name="widget.play.action"/>
            </intent-filter>
            <intent-filter>
                <action android:name="widget.next.action"/>
            </intent-filter>
            <intent-filter>
                <action android:name="widget.preview.action"/>
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@layout/appwiget_provider"></meta-data>
        </receiver>

    </application>

</manifest>
